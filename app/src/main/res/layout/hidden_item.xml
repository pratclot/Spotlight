<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="200dp"
  >

  <androidx.cardview.widget.CardView
    android:id="@+id/cardViewHiddenItemTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:padding="4dp"
    app:cardCornerRadius="4dp"
    >

    <TextView
      android:id="@+id/textViewHiddenItemTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/cyclic_item"
      android:textColor="@color/colorText"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/textViewHiddenItemContent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:text="@string/hi"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardViewHiddenItemTitle"
    />
</androidx.constraintlayout.widget.ConstraintLayout>